<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.card.AddCard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"

            android:contentDescription="@string/back_button_description"
            android:padding="8dp"
            android:src="@drawable/back_arrow_24"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/AddCard"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_layout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Enter Business Name"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Email"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:hint="Enter Business Email"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Website"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_web"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="ex: https://yourwebsite.com"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Address"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_address"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Enter Business Address"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Phone"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_phone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:hint="Enter Business Name"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Owner"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_owner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="Enter Business Owner"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_insta"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="ex:  https://instagram.com/your_insta_id"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youtube"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:textSize="19dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:elevation="10dp"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:id="@+id/edt_bs_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="text"
                    android:padding="10dp"
                    android:hint="ex: https://youtube.com/c/your_channel"
                    android:background="@color/white"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    <Button
        android:id="@+id/save_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_round_cornor"
        />

        <Button
            android:id="@+id/write_nfc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Write To Tag"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/button_round_cornor"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>